{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      },
      "models": {
        "codellama:latest": {
          "tools": true
        },
        "devstral:latest": {
          "tools": true
        },
        "gpt-oss:20b": {
          "tools": true
        }
      }
    }
  },
  "mcp": {
    "podman": {
      "type": "local",
      "command": [
        "npx",
        "podman-mcp-server@latest"
      ],
      "environment": {},
      "enabled": true
    },
    "sentient-agi-reasoning": {
      "type": "local",
      "command": [
        "node",
        "--expose-gc",
        "/Users/blentz/git/map-think-do/dist/index.js"
      ],
      "environment": {
        "NODE_ENV": "production",
        "DEBUG": "true",
        "MEMORY_STORE_TYPE": "postgresql",
        "POSTGRES_HOST": "localhost",
        "POSTGRES_PORT": "5432",
        "POSTGRES_DB": "redacted",
        "POSTGRES_USER": "redacted",
        "POSTGRES_PASSWORD": "redacted"
      },
      "enabled": true
    },
    "grafana": {
      "type": "local",
      "command": [
        "/Users/blentz/go/bin/mcp-grafana",
        "--debug"
      ],
      "environment": {
        "GRAFANA_URL": "redacted",
        "GRAFANA_API_KEY": "redacted"
      },
      "enabled": true
    },
    "postgres": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-postgres",
        "postgresql://redacted:redacted@localhost:5432/map_think_do"
      ],
      "enabled": true
    },
    "terraform-cloud-mcp": {
      "type": "local",
      "enabled": true,
      "command": ["/opt/homebrew/bin/uv",
        "--directory",
        "/Users/blentz/git/terraform-cloud-mcp",
        "run",
        "terraform-cloud-mcp"
      ],
      "environment": {
        "TFC_TOKEN": "redacted",
        "TFC_ADDRESS": "https://app.terraform.io",
        "ENABLE_DELETE_TOOLS": "false"
      }
    }
  },
  "instructions": [
    "AGENTS.md"
  ]
}
