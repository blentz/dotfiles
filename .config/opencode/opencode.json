{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "small_model": "anthropic/claude-3-5-haiku-20241022",
  "keybinds": {
    "leader": "ctrl+x",
    "app_exit": "ctrl+q,<leader>q",
    "editor_open": "<leader>e",
    "theme_list": "<leader>t",
    "session_export": "<leader>x",
    "session_new": "<leader>n",
    "session_list": "<leader>l",
    "session_share": "<leader>s",
    "session_unshare": "none",
    "session_interrupt": "esc",
    "session_compact": "<leader>c",
    "session_child_cycle": "alt+right",
    "session_child_cycle_reverse": "alt+left",
    "messages_page_up": "pgup",
    "messages_page_down": "pgdown",
    "messages_half_page_up": "ctrl+alt+u",
    "messages_half_page_down": "ctrl+alt+d",
    "messages_first": "ctrl+g,home",
    "messages_last": "ctrl+alt+g,end",
    "messages_copy": "<leader>y",
    "messages_undo": "<leader>u",
    "messages_redo": "<leader>r",
    "model_list": "<leader>m",
    "model_cycle_recent": "f2",
    "model_cycle_recent_reverse": "shift+f2",
    "agent_list": "<leader>a",
    "agent_cycle": "tab",
    "agent_cycle_reverse": "shift+tab",
    "input_clear": "ctrl+c",
    "input_paste": "ctrl+v",
    "input_submit": "return",
    "input_newline": "shift+return,ctrl+j"
  },
  "provider": {
    "openai": {
      "models": {
        "openai/gpt-5": {
          "store": true
        },
        "openai/gpt-5-mini": {
          "store": true
        },
        "openai/gpt-5-turbo": {
          "store": true
        },
        "openai/gpt-5-vision": {
          "store": true
        },
        "openai/gpt-5-codex": {
          "store": true
        },
        "openai/gpt-5-codex-mini": {
          "store": true
        },
        "openai/gpt-5-codex-turbo": {
          "store": true
        }
      }
    },
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      },
      "models": {
        "gpt-oss:20b": {
          "tools": true
        }
      }
    }
  },
  "mcp": {
    "podman": {
      "type": "local",
      "command": [
        "npx",
        "podman-mcp-server@latest"
      ],
      "environment": {},
      "enabled": true
    },
    "sentient-agi-reasoning": {
      "type": "local",
      "command": [
        "node",
        "--expose-gc",
        "/Users/blentz/git/map-think-do/dist/index.js"
      ],
      "environment": {
        "NODE_ENV": "production",
        "DEBUG": "true",
        "MEMORY_STORE_TYPE": "postgresql",
        "POSTGRES_HOST": "localhost",
        "POSTGRES_PORT": "5432",
        "POSTGRES_DB": "map_think_do",
        "POSTGRES_USER": "mtd_user",
        "POSTGRES_PASSWORD": "{file:~/.config/opencode/secrets/postgres_password}",
        "TELEMETRY_ENABLED": "false"
      },
      "enabled": true
    },
    "grafana": {
      "type": "local",
      "command": [
        "/Users/blentz/.go/bin/mcp-grafana",
        "--debug"
      ],
      "environment": {
        "GRAFANA_URL": "https://hatchengineering.grafana.net",
        "GRAFANA_API_KEY": "{file:~/.config/opencode/secrets/grafana_api_key}"
      },
      "enabled": true
    },
    "postgres": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-postgres",
        "postgresql://mtd_user:{file:~/.config/opencode/secrets/postgres_password}@localhost:5432/map_think_do"
      ],
      "enabled": false
    },
    "terraform-cloud-mcp": {
      "type": "local",
      "enabled": false,
      "command": [
        "/opt/homebrew/bin/uv",
        "--directory",
        "/Users/blentz/git/terraform-cloud-mcp",
        "run",
        "terraform-cloud-mcp"
      ],
      "environment": {
        "TFC_TOKEN": "{file:~/.config/opencode/secrets/tfc_token}",
        "TFC_ADDRESS": "https://app.terraform.io",
        "ENABLE_DELETE_TOOLS": "false"
      }
    },
    "github": {
      "type": "local",
      "command": [
        "/Users/blentz/git/github-mcp-server/github-mcp-server",
        "stdio"
      ],
      "environment": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "{file:~/.config/opencode/secrets/github_token}"
      },
      "enabled": true
    },
    "incidentio": {
      "type": "local",
      "command": [
        "/Users/blentz/git/incidentio-mcp-golang/bin/mcp-server"
      ],
      "environment": {
        "INCIDENT_IO_API_KEY": "{file:~/.config/opencode/secrets/incident_io_key}"
      },
      "enabled": true
    },
    "slack": {
      "type": "local",
      "command": [
        "/Users/blentz/git/slack-mcp-server/build/slack-mcp-server"
      ],
      "environment": {
        "SLACK_MCP_XOXP_TOKEN": "{file:~/.config/opencode/secrets/slack_token}",
        "SLACK_MCP_LOG_LEVEL": "info",
        "SLACK_MCP_USERS_CACHE": "/Users/blentz/git/.opencode/.users_cache.json",
        "SLACK_MCP_CHANNELS_CACHE": "/Users/blentz/git/.opencode/.channels_cache.json"
      },
      "enabled": false
    },
    "cloudflare-docs": {
      "type": "local",
      "command": [
        "npx",
        "mcp-remote",
        "https://docs.mcp.cloudflare.com/sse"
      ],
      "enabled": false
    },
    "cloudflare-observability": {
      "type": "local",
      "command": [
        "npx",
        "mcp-remote",
        "https://observability.mcp.cloudflare.com/sse"
      ],
      "environment": {
        "CF_API_TOKEN": "{file:~/.config/opencode/secrets/cloudflare_token}"
      },
      "enabled": false
    },
    "cloudflare-bindings": {
      "type": "local",
      "command": [
        "npx",
        "mcp-remote",
        "https://bindings.mcp.cloudflare.com/sse"
      ],
      "environment": {
        "CF_API_TOKEN": "{file:~/.config/opencode/secrets/cloudflare_token}"
      },
      "enabled": false
    },
    "cloudflare-builds": {
      "type": "local",
      "command": [
        "npx",
        "mcp-remote",
        "https://builds.mcp.cloudflare.com/sse"
      ],
      "environment": {
        "CF_API_TOKEN": "{file:~/.config/opencode/secrets/cloudflare_token}"
      },
      "enabled": false
    },
    "cloudflare-radar": {
      "type": "local",
      "command": [
        "npx",
        "mcp-remote",
        "https://radar.mcp.cloudflare.com/sse"
      ],
      "environment": {
        "CF_API_TOKEN": "{file:~/.config/opencode/secrets/cloudflare_token}"
      },
      "enabled": false
    },
    "cloudflare-containers": {
      "type": "local",
      "command": [
        "npx",
        "mcp-remote",
        "https://containers.mcp.cloudflare.com/sse"
      ],
      "environment": {
        "CF_API_TOKEN": "{file:~/.config/opencode/secrets/cloudflare_token}"
      },
      "enabled": false
    },
    "cloudflare-browser": {
      "type": "local",
      "command": [
        "npx",
        "mcp-remote",
        "https://browser.mcp.cloudflare.com/sse"
      ],
      "environment": {
        "CF_API_TOKEN": "{file:~/.config/opencode/secrets/cloudflare_token}"
      },
      "enabled": false
    },
    "aws-serverless-mcp-staging": {
      "type": "local",
      "command": [
        "uvx",
        "awslabs.aws-serverless-mcp-server@latest"
      ],
      "environment": {
        "AWS_PROFILE": "aws-staging",
        "AWS_REGION": "us-east-2",
        "FASTMCP_LOG_LEVEL": "ERROR"
      },
      "enabled": false
    },
    "aws-serverless-mcp-prod": {
      "type": "local",
      "command": [
        "uvx",
        "awslabs.aws-serverless-mcp-server@latest"
      ],
      "environment": {
        "AWS_PROFILE": "aws-prod",
        "AWS_REGION": "us-east-2",
        "FASTMCP_LOG_LEVEL": "ERROR"
      },
      "enabled": false
    },
    "gcloud": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@google-cloud/gcloud-mcp"
      ],
      "enabled": false
    },
    "gcloud-observability": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@google-cloud/observability-mcp"
      ],
      "enabled": false
    },
    "linear": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-remote",
        "https://mcp.linear.app/sse"
      ],
      "enabled": true
    },
    "notion": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "/Users/blentz/git/notion-mcp-server/bin/cli.mjs"
      ],
      "environment": {
        "NOTION_TOKEN": "{file:~/.config/opencode/secrets/notion_token}"
      },
      "enabled": true
    },
    "vanta": {
      "type": "local",
      "command": [
        "node",
        "/Users/blentz/git/vanta-mcp-server/build/index.js"
      ],
      "environment": {
        "VANTA_ENV_FILE": "/Users/blentz/.vanta"
      },
      "enabled": false
    },
    "mongodb-atlas": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mongodb-mcp-server",
        "--readOnly"
      ],
      "environment": {
        "MDB_MCP_CONNECTION_STRING": "{file:~/.config/opencode/secrets/mongodb_atlas_connection_string}"
      },
      "enabled": false
    },
    "crawl4ai": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-remote",
        "http://localhost:11235/mcp/sse"
      ],
      "environment": {},
      "enabled": true
    }
  },
  "instructions": [
    "AGENTS.md"
  ]
}
